<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @deposit.depositer_name %>'s Deposit </h1>
  </div>
</div>
<%= render partial: 'show', locals: {deposit: @deposit} %>
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @deposit.depositer_name %>'s Other Deposit</h1>
  </div>
</div>
<% @depositer_deposits.all_except(@deposit).each do |deposit| %>
  <%= render partial: 'show', locals: {deposit: deposit} %>
<% end %>
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @deposit.depositer_name %>'s Total Deposit</h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
	  <h3><%= @depositer_deposits.total_deposits %></h3>
  </div>
</div>