<%= simple_form_for @depositer do |f| %>
  <div class="row">
    <div class="col-md-4">
      <%= f.input :name %>
    </div>
    <div class="col-md-4">
      <%= f.input :mobile %>
    </div>
    <div class="col-md-4">
      <%= f.input :address %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= f.input :about %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= f.button :button %>
    </div>
  </div>
<% end %>